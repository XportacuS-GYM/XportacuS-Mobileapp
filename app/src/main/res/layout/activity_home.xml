<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:padding="22dp"
    android:background="@color/main">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notifyBtn_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginStart="90dp"
                android:layout_toEndOf="@+id/textView2"
                android:padding="10dp"
                android:src="@drawable/ic_notify"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="XportacuS - GYM"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            
                        <EditText
                            android:id="@+id/search_id"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/search_rounded"
                            android:drawableLeft="@drawable/ic_search"
                            android:elevation="5dp"
                            android:fontFamily="sans-serif"
                            android:hint="  Buscar"
                            android:outlineSpotShadowColor="@color/deg"
                            android:padding="10dp"
                            android:textColorHint="@color/white"
                            android:textSize="15sp"
                            app:circularflow_defaultRadius="10dp"
                            app:cornerRadius="48dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView2" />
            
                        <TextView
                            android:id="@+id/categorias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/search_id"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            android:text="CategorÃ­as de Ejercicios"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/search_id" />
            
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/categorias"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/tab_react"
                        android:elevation="3dp"
                        app:tabGravity="fill"
                        app:tabIndicatorHeight="0dp"
                        app:tabMode="fixed"
                        app:tabRippleColor="@null"
                        app:tabSelectedTextColor="@color/secon"
                        app:tabTextAppearance="@style/TabLayout"
                        app:tabTextColor="@color/black" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/secon">

                    </androidx.viewpager2.widget.ViewPager2>
                </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>